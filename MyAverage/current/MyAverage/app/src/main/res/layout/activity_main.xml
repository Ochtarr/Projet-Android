
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff464646">



    <TextView android:text="@string/app_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="#ffffffff" />

    <TextView android:text="@string/global_average" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGlobalAverage"
        android:textSize="@dimen/global_average_size"
        android:layout_below="@+id/textViewTitle"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff4c53"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a subject"
        android:minHeight="35dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button_addSubject"
        android:textColor="#ffffffff"
        android:background="#ffff4c53"
        android:layout_below="@+id/textViewGlobalAverage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listViewSubject"
        android:layout_alignEnd="@+id/listViewSubject"
        android:radius="10dp"
        android:layout_marginTop="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSubject"
        android:layout_below="@+id/button_addSubject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/superAndroid"
        android:src="@drawable/superandroid"
        android:layout_alignBottom="@+id/details"
        android:layout_toStartOf="@+id/details"
        android:visibility="gone"
        android:layout_below="@+id/button_addSubject"
        android:layout_alignRight="@+id/coefficient"
        android:layout_alignEnd="@+id/coefficient" />

</RelativeLayout>

