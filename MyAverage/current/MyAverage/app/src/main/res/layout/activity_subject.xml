<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff464646"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="esgi.fr.myaverage.SubjectActivity"
            android:background="#ff464646">-->

        <TextView
            android:id="@+id/textViewTitle_activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="@string/app_title"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSubjectAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle_activity2"
            android:layout_centerHorizontal="true"
            android:text="@string/global_average"
            android:textColor="#ffff4c53"
            android:textIsSelectable="false"
            android:textSize="@dimen/global_average_size"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/textViewMysubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSubjectAverage"
            android:layout_centerHorizontal="true"
            android:text="@string/mysubject_title"
            android:textColor="#ffff4c53"
            android:textIsSelectable="false"
            android:textSize="@dimen/subject_titles"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/subjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewMysubject"
            android:text="Enter a subject" />

        <EditText
            android:id="@+id/subjectCoefficient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/subjectName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/subjectName"
            android:layout_below="@+id/subjectName"
            android:text="Enter a coefficient" />

        <TextView
            android:id="@+id/textViewMymarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewMysubject"
            android:layout_alignStart="@+id/textViewMysubject"
            android:layout_centerVertical="true"
            android:text="@string/mymarks_title"
            android:textColor="#ffff4c53"
            android:textIsSelectable="false"
            android:textSize="@dimen/subject_titles"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewMymarks"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alignmentMode="alignBounds"
            android:clickable="true"
            android:columnCount="9"
            android:columnOrderPreserved="true"
            android:rowCount="9"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/button_mark1"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="1"
                android:layout_row="1"
                android:text="" />

            <Button
                android:id="@+id/button_mark2"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="3"
                android:layout_row="1"
                android:text="" />

            <Button
                android:id="@+id/button_mark3"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="5"
                android:layout_row="1"
                android:text="" />

            <Button
                android:id="@+id/button_mark4"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="7"
                android:layout_row="1"
                android:text="" />

            <Button
                android:id="@+id/button_mark5"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="1"
                android:layout_row="3"
                android:text="" />

            <Button
                android:id="@+id/button_mark6"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="3"
                android:layout_row="3"
                android:text="" />

            <Button
                android:id="@+id/button_mark7"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="5"
                android:layout_row="3"
                android:text="" />

            <Button
                android:id="@+id/button_mark8"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="7"
                android:layout_row="3"
                android:text="" />

            <Button
                android:id="@+id/button_mark9"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="1"
                android:layout_row="5"
                android:text="" />

            <Button
                android:id="@+id/button_mark10"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="3"
                android:layout_row="5"
                android:text="" />

            <Button
                android:id="@+id/button_mark11"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="5"
                android:layout_row="5"
                android:text="" />

            <Button
                android:id="@+id/button_mark12"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="7"
                android:layout_row="5"
                android:text="" />

            <Button
                android:id="@+id/button_mark13"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="1"
                android:layout_row="7"
                android:text="" />

            <Button
                android:id="@+id/button_mark14"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="3"
                android:layout_row="7"
                android:text="" />

            <Button
                android:id="@+id/button_mark15"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="5"
                android:layout_row="7"
                android:text="" />

            <Button
                android:id="@+id/button_mark16"
                android:layout_width="@dimen/subject_buttons_width"
                android:layout_height="@dimen/subject_buttons_height"
                android:layout_column="7"
                android:layout_row="7"
                android:text="" />
        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:text="delete"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffff4c53"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:text="save"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff8acb82"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView><!--</RelativeLayout>-->
