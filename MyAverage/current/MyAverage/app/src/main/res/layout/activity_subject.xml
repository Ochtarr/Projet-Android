<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="esgi.fr.myaverage.SubjectActivity"
    android:background="#ff747474">

    <TextView android:text="@string/app_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle_activity2"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="#ffffffff" />

    <TextView android:text="@string/global_average" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSubjectAverage"
        android:textSize="@dimen/global_average_size"
        android:layout_below="@+id/textViewTitle_activity2"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff4c53" />

    <TextView android:text="@string/mysubject_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMysubject"
        android:textSize="@dimen/subject_titles"
        android:layout_below="@+id/textViewSubjectAverage"
        android:textIsSelectable="false"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff4c53"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subjectName"
        android:layout_below="@+id/textViewMysubject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Enter a subject" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subjectCoefficient"
        android:layout_below="@+id/subjectName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/subjectName"
        android:layout_alignEnd="@+id/subjectName"
        android:text="Enter a coefficient" />

    <TextView android:text="@string/mymarks_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMymarks"
        android:textSize="@dimen/subject_titles"
        android:textIsSelectable="false"
        android:textColor="#ffff4c53"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textViewMysubject"
        android:layout_alignStart="@+id/textViewMysubject" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewMymarks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true"
        android:useDefaultMargins="true"
        android:layout_alignParentBottom="true"
        android:columnCount="9"
        android:rowCount="9"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:alignmentMode="alignBounds"
        android:clickable="true">

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark1"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark2"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark3"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark4"
            android:layout_row="1"
            android:layout_column="7" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark5"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark6"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark7"
            android:layout_row="3"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark8"
            android:layout_row="3"
            android:layout_column="7" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark9"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark10"
            android:layout_row="5"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark11"
            android:layout_row="5"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark12"
            android:layout_row="5"
            android:layout_column="7" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark13"
            android:layout_row="7"
            android:layout_column="1" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark14"
            android:layout_row="7"
            android:layout_column="3" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark15"
            android:layout_row="7"
            android:layout_column="5" />

        <Button
            android:layout_width="@dimen/subject_buttons_width"
            android:layout_height="@dimen/subject_buttons_height"
            android:text=""
            android:id="@+id/button_mark16"
            android:layout_row="7"
            android:layout_column="7" />
    </GridLayout>

</RelativeLayout>
