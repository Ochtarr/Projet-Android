<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="esgi.fr.myaverage.TestActivity"
    android:background="#ff464646">

    <TextView android:text="@string/app_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle_activity3"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TestMark"
        android:text="0"
        android:width="85dp"
        android:height="85dp"
        android:layout_below="@+id/textViewTitle_activity3"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:gravity="center"
        android:textSize="30dp" />

    <TextView android:text="@string/SubjectName" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSubjectName"
        android:textSize="@dimen/subject_titles"
        android:textIsSelectable="false"
        android:textColor="#ffff4c53"
        android:textStyle="bold"
        android:layout_below="@+id/TestMark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coefficient"
        android:layout_below="@+id/textViewSubjectName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Enter a Coefficient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/details_label"
        android:textColor="#ffff4c53"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textViewTitle_activity3"
        android:layout_alignStart="@+id/textViewTitle_activity3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/details"
        android:layout_alignRight="@+id/coefficient"
        android:layout_alignEnd="@+id/coefficient"
        android:background="#ffffd3cc"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/details_label"
        android:layout_toEndOf="@+id/TestMark"
        android:layout_alignLeft="@+id/TestMark"
        android:layout_alignStart="@+id/TestMark"
        android:text="What was your test about !?"
        android:gravity="top"
        android:padding="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/superAndroid"
        android:src="@drawable/superandroid"
        android:layout_alignBottom="@+id/details"
        android:layout_below="@+id/details_label"
        android:layout_toStartOf="@+id/details"
        android:layout_toLeftOf="@+id/details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="save"
        android:id="@+id/saveMark"
        android:textColor="#ffff4c53"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="delete"
        android:id="@+id/deleteMark"
        android:textColor="#ffff4c53"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
